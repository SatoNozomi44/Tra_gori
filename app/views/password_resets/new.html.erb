<div class="min-h-screen">
  <div class="container mx-auto px-5 py-8">
    <div class="rounded-xl border-0 px-10 pt-10 pb-6 sm:mx-40 md:mx-40 lg:mx-40 xl:mx-96">
      <h2 class="text-3xl md:text-4xl text-center py-4">
        パスワードリセット<br>
        申請フォーム
      </h2>
      <div class="flex flex-col border-t-2 border-customGreen1">
        <%= form_with url: password_resets_path, method: :post do |f| %>
          <div class="field my-20 text-sm md:text-base">
            <%= f.label :email, User.human_attribute_name(:email) %><span class="text-xs md:text-sm text-gray-500"></span><br>
            <%= f.email_field :email, required: true, autocomplete: "email", class: "w-full border-2 border-customGreen1 rounded-xl bg-white py-3 px-5" %>
          </div>
          <div class="flex justify-center">
            <button type="submit" class="actions text-center rounded-lg bg-customYellow3 py-3 px-4 mb-5 w-64 transition ease-in-out hover:bg-customYellow4 hover:drop-shadow-lg hover:-translate-y-1  active:scale-95 active:bg-customYellow4">
              <span class="text-black font-semibold"><%= t(".transmission") %></span>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
